body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: gray;
}


.wishlist-container {
    max-width: 600px;
    margin: 50px auto;
    text-align: center;
}

.wishlist {
    list-style-type: none;
    padding: 0;
}

.item {
    background-color: #f4f4f4;
    border: 2px solid #525252;
    padding: 10px;
    margin-bottom: 10px;
    border-radius: 5px;
}

.item:hover {
    background-color: #e0e0e0;
    cursor: pointer;
}

.checkbox {
    transform: scale(2);
    float: right;
}

.checkbox:checked {
    opacity: 50%;
}

h1 {
    font-weight: bolder;
    transform: scale(2);
    text-decoration: underline;
    margin-bottom: 5vh;
}

a, a:visited {
    color: inherit;
    text-decoration: none;
}
